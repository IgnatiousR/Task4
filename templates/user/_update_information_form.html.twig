<section>
    <header>
        <h2 class="text-lg font-medium text-gray-900">User Information</h2>

        <p class="mt-1 text-sm text-gray-600">Update your account's information.</p>
    </header>

    <form method="post" action="#" class="mt-6 space-y-6">
        <div>
            <label for="first_name" value="First Name" class="block font-medium text-sm text-gray-700">First Name</label>
            <input id="first_name" name="first_name" type="text" class="mt-1 block border outline-none w-full rounded-md shadow-sm p-2" value="old value" required autocomplete="first_name" />
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                <li>error-message</li>
            </ul>
        </div>

        <div>
            <label for="last_name" value="Last Name" class="block font-medium text-sm text-gray-700">Last Name</label>
            <input id="last_name" name="last_name" type="text" class="p-2 mt-1 block w-full border outline-none focus:border-gray-300 rounded-md shadow-sm" value="old value" required autocomplete="last_name" />
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                <li>error-message</li>
            </ul>
        </div>

        <div>
            <label for="email" value="Email" class="block font-medium text-sm text-gray-700">Email</label>
            <input id="email" name="email" type="email" class="p-2 mt-1 block w-full border outline-none rounded-md shadow-sm" value="old value" required autocomplete="email" />
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                <li>error-message</li>
            </ul>
        </div>

            <div class="flex items-center gap-4">
                <button type="submit" class="inline-flex items-center px-4 py-2 bg-gray-800 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 focus:bg-gray-700 active:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition ease-in-out duration-150">Save</button>

                <p x-data="{show:true}" x-show="show" x-init="setTimeout(() => show = false, 2000)" x-transition class="text-sm text-gray-600">Saved</p>
            </div>
    </form>
</section>
