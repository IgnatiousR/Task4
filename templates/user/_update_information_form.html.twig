<section>
    <header>
        <h2 class="text-lg font-medium text-gray-900">User Information</h2>
        <p class="mt-1 text-sm text-gray-600">Update your account's information.</p>
    </header>
    {{ form_start(userForm, {'attr': {'class': 'mt-6 space-y-6' }}) }}
        {% do userForm.password.setRendered %}
        {{ form_label(userForm.firstName, 'First name', {'label_attr': {'class': 'block font-medium text-sm text-gray-700' }}) }}
        {{ form_widget(userForm.firstName, {'attr': {'class': 'mt-1 block border outline-none w-full rounded-md shadow-sm p-2' }}) }}
        {% if userForm.firstName.vars['errors']|length > 0 %}
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                {% for error in userForm.firstName.vars['errors'] %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {{ form_label(userForm.lastName, 'Last name', {'label_attr': {'class': 'block font-medium text-sm text-gray-700' }}) }}
        {{ form_widget(userForm.lastName, {'attr': {'class': 'mt-1 block border outline-none w-full rounded-md shadow-sm p-2' }}) }}
        {% if userForm.lastName.vars['errors']|length > 0 %}
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                {% for error in userForm.lastName.vars['errors'] %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {{ form_label(userForm.email, 'Email address', {'label_attr': {'class': 'block font-medium text-sm text-gray-700' }}) }}
        {{ form_widget(userForm.email, {'attr': {'class': 'mt-1 block border outline-none w-full rounded-md shadow-sm p-2' }}) }}
        {% if userForm.email.vars['errors']|length > 0 %}
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                {% for error in userForm.email.vars['errors'] %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        {{ form_label(userForm.phoneNumber, 'Phone number', {'label_attr': {'class': 'block font-medium text-sm text-gray-700' }}) }}
        {{ form_widget(userForm.phoneNumber, {'attr': {'class': 'mt-1 block border outline-none w-full rounded-md shadow-sm p-2' }}) }}
        {% if userForm.phoneNumber.vars['errors']|length > 0 %}
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                {% for error in userForm.phoneNumber.vars['errors'] %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <div class="flex items-center gap-4">
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-gray-800 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 focus:bg-gray-700 active:bg-gray-900 transition ease-in-out duration-150">Save</button>
            {% for message in app.flashes('status-password') %}
                {% if message == 'password-changed' %}
                <p x-data="{show:true}" x-show="show" x-init="setTimeout(() => show = false, 2000)" x-transition class="text-sm text-gray-600">Saved</p>
                {% endif %}
            {% endfor %}
        </div>
    {{ form_end(userForm) }}
</section>
